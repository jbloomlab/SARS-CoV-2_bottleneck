#### ----------------------- Imports ----------------------- ####

import pandas as pd 
from os.path import join
from snakemake.utils import min_version

min_version('5.6.0')  # require `snakemake` >= 5.6.0

#### -------------------- Configuration -------------------- ####

configfile: "config/config.yml"

#### ------------------------ Utils ------------------------ ####

include: "rules/common.smk"

#### ----------------------- Targets ----------------------- ####

rule all:
    input: 
        expand(join(config['align_dir'], "{aligner}", "{accession}", "{accession}.{aligner}.{split}.sorted.marked.bam.bai"),
               accession=pd.read_csv(config['samples']['file'])['Run'], aligner=["BWA"], split=['virus']),
        #join(config['variant_dir'], "variants.csv"),
        #join(config['pileup_dir'], "raw-variants.csv"),
        join(config['qc_dir'], 'multiqc'),
        join(config['coverage_dir'], "merged.bedgraph")
        #expand(join(config['pileup_dir'], "{aligner}", "{accession}", "{accession}.{aligner}.will.mpileup.csv"), accession=pd.read_csv(config['samples']['file'])['Run'], aligner=['BWA'])

rule clean:
    shell:
        """
        rm -rf logs/
        rm -rf tmp/
        rm -f slurm*.out
        """
